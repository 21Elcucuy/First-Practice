@model IEnumerable<PracticeUI.Models.DTO. EmployeeDTO>
@{
}
<h1 class="bg-gray-800 text-white p-4" > Employees  </h1>

<div class="d-flex justify-content-end">
   <a class="btn btn-secondary"asp-controller="Employees" asp-action="Add">Add Employee</a>
</div>

<table class="table table-boarded">
	<thead>
		<th>Id</th>
		<th>Name</th>
		<th>Email</th>
		<th>Phone</th>
		<th>Department Name</th>
	</thead>
	<tbody>
	@foreach(var emp in Model)
	{
			<tr>
			<td>@emp.Id</td>
			<td>@emp.Name</td>
			<td>@emp.Email</td>
			<td>@emp.Phone</td>
			<td>@emp.Department.Name</td>
			<td>
				<a asp-controller="Employees" asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-light">Edit</a>
			</td>
			</tr>
	}
		</tbody>
</table>